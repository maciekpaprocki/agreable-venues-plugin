.venues-marker
  border-width 1px
  box-shadow 0 5px 20px 0px rgba(0, 0, 0, 0.5)
  top -12px // to offset the arrow

  &:after {
    content ""
    position absolute
    bottom -12px
    left 50%
    margin-left -12px
    border-left: 12px solid transparent;
    border-right: 12px solid transparent;
    border-top: 12px solid white;
  }

