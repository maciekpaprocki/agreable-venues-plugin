@import 'mixins'
@import 'allure-breakpoints'

.venues-overlay-container
  box-sizing border-box
  position absolute
  left 50%
  max-width 320px
  top 20px
  transform translateX(-50%)
  width 100%
  z-index 10
  fullViewportHeight(95vh)

@media smallTabletsAndUp
  .venues-overlay-container
    left auto
    right 20px
    transform none

@media smallDesktopsAndUp
  .venues-overlay-container
    max-width 420px

.venues-overlay-container__close
  background white
  border-radius 15px
  box-shadow 1px 1px 10px rgba(0, 0, 0, 0.2)
  font-size 21px
  height 30px
  position absolute
  left 5px
  top 5px
  text-align center
  width 30px
  z-index 20
  text-decoration none
