@import 'nib'
@import 'allure-breakpoints'

.venues-search
  background white
  top 20px
  box-shadow 3px 9px 25px -8px #000
  padding 10px
  position absolute
  text-align center
  width 100%
  z-index 20
  width 90%
  margin 0 5%

  @media smallTabletsAndUp
    width 340px
    left 20px
    margin 0

.venues-search--hide-sml
  display none
  @media ipadsAndUp
    display block

.venues-search input[type="text"]
  text-align left
  padding 5px 5px 5px 10px
  width 100%
  font-size 20px

.venues-search__icon
  float left
  width 24px
  overflow hidden
  position absolute
  top 19px
  right 16px

.venues-search__icon svg
  fill #333
  max-width 24px
  max-height 24px

.venues-search__locateme-wrapper
    display none // hidden due to chrome not allowing location without https

.venues-search__locateme svg
  fill #333
  left -4px
  max-width 16px
  max-height 16px
  position relative
  top 4px

